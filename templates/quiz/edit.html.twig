{% extends 'base.html.twig' %}

{% block title %}Edit Quiz
{% endblock %}

{% form_theme form _self %}

{% block body %}
	<h1>Edit Quiz</h1>

	{% for label, messages in app.flashes %}
		<div class="container">
			<div class="alert alert-{{ label }}">
				{% for message in messages %}
					<p>{{ message | raw }}</p>
				{% endfor %}

			</div>
		</div>
	{% endfor %}

	{{ include('quiz/_form.html.twig', {'button_label': 'Update'}) }}

	<a href="{{ path('quiz_index') }}">Back To Quiz List</a>

	{{ include('quiz/_delete_form.html.twig') }}
{% endblock %}


{% block _quiz_questions_widget %}
	{# <p>Liste des questions du quiz</p> #}
	{{ form_widget(form) }}
{% endblock %}


{% block _quiz_questions_entry_row %}
	{{ form_widget(form) }}
{% endblock %}

{% block _quiz_questions_entry_widget %}
	<div class="form-group">
		<p>
			Question
			{{ form.vars.name + 1}}
			{{ form_widget(form.name) }}
			{% for question in form %}
				{% for answers in question %}
                Answer
					{% for answer in answers %}
                    {# {{dump(answers)}} #}
						{# Answer #{{answers.vars.name}} #}
                        {% set ans =  answers.vars.name + 1 %}
                        {{form_label(answer, ans)}}
						{{form_widget(answer)}}
					{% endfor %}
				{% endfor %}
			{% endfor %}
		</p>
	</div>
{% endblock %}
