{% extends 'base.html.twig' %}

{% block title %}Edit Quiz
{% endblock %}

{% form_theme form _self %}

{% block body %}
	<div class="card mb-2">
		<div class="card-body">
			<h1 class="card-title">Edit Quiz</h1>

			{{ include('includes/danger_flash.html.twig') }}

			{{ include('quiz/_form.html.twig', {'button_label': 'Update'}) }}

			<a class='btn btn-secondary' href="{{ path('quiz_index') }}">Back To Quiz List</a>

			{{ include('quiz/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}

{% block _quiz_questions_widget %}
	{{ form_widget(form) }}
{% endblock %}


{% block _quiz_questions_entry_row %}
	{{ form_widget(form) }}
{% endblock %}

{% block _quiz_questions_entry_widget %}
	{{ include('quiz/_quiz_question_widget.html.twig') }}
{% endblock %}
