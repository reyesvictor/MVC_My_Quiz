{% extends 'base.html.twig' %}

{% block title %}Quiz
{% endblock %}

{% block body %}
	<h1>Quiz</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ quiz.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ quiz.name }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ quiz.slug }}</td>
			</tr>
			<tr>
				<th>Data</th>
				<td>{{ quiz.data }}</td>
			</tr>
			<tr>
				<th>Created_at</th>
				<td>{{ quiz.createdAt ? quiz.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Updated_at</th>
				<td>{{ quiz.updatedAt ? quiz.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a class='btn btn-secondary'  href="{{ path('quiz_index') }}">back to list</a>

	<br>
	<a class='btn btn-preimary'  href="{{ path('quiz_play', {'id': quiz.id}) }}">PLAY</a>
	<br>
	<a class='btn btn-secondary'  href="{{ path('quiz_edit', {'id': quiz.id}) }}">edit</a>

	{{ include('quiz/_delete_form.html.twig') }}
{% endblock %}
