{% extends 'base.html.twig' %}

{% block header %}
	{% include "includes/header.html.twig" %}
{% endblock %}

{% block title %}New Quiz
{% endblock %}

{% form_theme form _self %}


{% block body %}
	<div class="card mb-2">
		<div class="card-body">
			<h1 class="card-title">Create new Quiz</h1>
			<a class='btn btn-secondary mb-2' href="{{ path('quiz_index') }}">Back to List</a>

			{{ include('quiz/_form.html.twig') }}

		</div>
	</div>
{% endblock %}

{% block _quiz_questions_widget %}
	{{ form_widget(form) }}
{% endblock %}


{% block _quiz_questions_entry_row %}
	{{ form_widget(form) }}
{% endblock %}

{% block _quiz_questions_entry_widget %}
	<div class="form-group">
		<p>
			Question
			{{ form.vars.name + 1}}
			{{ form_widget(form.name) }}
			{% for question in form %}
				{% for answers in question %}
					Answer
					{% for answer in answers %}
						{# {{dump(answers)}} #}
						{# Answer #{{answers.vars.name}} #}
						{% set ans =  answers.vars.name + 1 %}
						{{form_label(answer, ans)}}
					{{form_widget(answer)}}
				{% endfor %}
			{% endfor %}
		{% endfor %}
	</p>
</div>{% endblock %}
