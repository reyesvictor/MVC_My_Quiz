{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{% if app.user %}
		<div class="card mb-2 col-4 mx-auto">
			<div class="card-body">
				<h1 class="card-title h3 mb-3 font-weight-normal">You are logged in as
					{{ app.user.username }}</h1>
					<a class="btn btn-secondary ml-2" href="{{ path('app_logout') }}">Logout</a>
				</div>
			</div>
		{% else %}


			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}
				<div class="card mb-2 col-4 mx-auto">
					<div class="card-body">
						<h1 class="card-title h3 mb-3 font-weight-normal">Please sign in</h1>
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
						<label for="inputPassword">Password</label>
						<input type="password" name="password" id="inputPassword" class="form-control" required>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<button class="btn btn-lg btn-primary mt-3" type="submit">
							Sign in
						</button>
					</form>
				</div>
			</div>
		{% endif %}
	{% endblock %}
