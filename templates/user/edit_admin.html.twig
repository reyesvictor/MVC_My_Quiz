{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% form_theme form _self %}

{% block body %}
	<div class="card mb-2">
		<div class="card-body">
			<h1 class="card-title">Edit User</h1>
	
			{{ form_start(form) }}
			<div class="card text-black bg-light mb-3">
				<div class="card-header">Original Admin Information</div>
				<div class="card-body">
					{{ form_label(form.email)}}
					{{ form_widget(form.email, {'attr': {'class':'form-control', 'value': user.email}  })  }}
					{{ form_widget(form._token) }}
				</div>
			</div>
			<button class="btn btn-primary">{{ button_label|default('Save') }}</button>
			{{ form_errors(form) }}
			{{ form_end(form, {'render_rest': false}) }}

			<a class='btn btn-secondary mt-1' href="{{ path('user_index') }}">Back to Users List</a>

			{{ include('user/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
 