{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<div class="card mb-2">
		<div class="card-body">
			<h1 class="card-title">User</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ user.id }}</td>
					</tr>
					<tr>
						<th>Name</th>
						<td>{{ user.name }}</td>
					</tr>
					<tr>
						<th>Slug</th>
						<td>{{ user.slug }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<th>Email_verified_at</th>
						<td>{{ user.emailVerifiedAt ? user.emailVerifiedAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th>Is_admin</th>
						<td>{{ user.isAdmin ? 'Yes' : 'No' }}</td>
					</tr>
					<tr>
						<th>Password</th>
						<td>{{ user.password }}</td>
					</tr>
					<tr>
						<th>Remember_token</th>
						<td>{{ user.rememberToken }}</td>
					</tr>
					<tr>
						<th>Created_at</th>
						<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th>Updated_at</th>
						<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th>Last_connected_at</th>
						<td>{{ user.lastConnectedAt ? user.lastConnectedAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
				</tbody>
			</table>

			<a class="btn btn-secondary" href="{{ path('user_index') }}">Back To Users List</a>

			<a class="btn btn-primary" href="{{ path('user_edit', {'id': user.id}) }}">Edit Profile</a>

			<a class="btn btn-primary" href="{{ path('user_update_password', {'id': user.id}) }}">Edit Password</a>

			{{ include('user/_delete_form.html.twig') }}

		</div>
	</div>
{% endblock %}
